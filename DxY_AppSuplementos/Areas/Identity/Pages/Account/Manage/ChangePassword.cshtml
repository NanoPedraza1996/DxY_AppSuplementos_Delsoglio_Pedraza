@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<!-- Custom styles for this template-->
<link href="~/lib/PlantillaStartBootstrap/css/sb-admin-2.min.css" rel="stylesheet">

<partial name="_StatusMessage" for="StatusMessage" />

<body class="bg-gradient-primary">
    <div class="container">
        @* <h3>@ViewData["Title"]</h3> *@
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    @* <div class="col-lg-5 d-none d-lg-block bg-register-image">
                    <div class="text-center">
                    <img src="~/img/supplements-vector-set.jpg" style="width: 185px;">
                    <h4 class="mt-1 mb-5 pb-1">Mantene tu Cuerpo Sano</h4>
                    </div>
                    </div> *@
                    <div class="col-lg-7 d-none d-lg-block bg-register-image">
                        <div class="p-4">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">¡Cambiar la contraseña!</h1>
                            </div>
                            <form id="change-password-form" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-group">
                                    <input asp-for="Input.OldPassword" type="password"
                                        class="form-control form-control-user" autocomplete="current-password"
                                        aria-required="true" id="exampleInputOldPassword" title="Contraseña"
                                        placeholder="Ingrese su antigua contraseña.">
                                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.NewPassword" type="password" title="Nueva Contraseña"
                                        class="form-control form-control-user" autocomplete="new-password"
                                        aria-required="true" id="exampleInputNewPassword"
                                        placeholder="Ingrese su nueva contraseña.">
                                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password"
                                        aria-required="true" class="form-control form-control-user"
                                        id="exampleRepeatPassword" title="Confirme Contraseña"
                                        placeholder="Confirme su nueva contraseña.">
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button type="submit" class="w-100 btn btn-lg btn-primary">Actualiza contraseña</button>
                            </form>
                            @* <hr>
                            <div class="text-center">
                            <a class="small" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">¿Ya
                            tienes
                            una cuenta? ¡Inicia sesión!</a>
                            </div> *@
                        </div>
                    </div>
                    <div class="col-lg-5">
                        @* <div class="p-2"> *@
                        <div class="text-center">
                            <img src="~/img/contraseña.jpg" style="width: 185px;">
                            <h4 class="mt-1 mb-5 pb-1">Contraseña</h4>
                        </div>
                        @* </div> *@
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>












