@{
    ViewData["Title"] = "Clientes";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" onclick="BuscarCliente()" data-bs-toggle="modal"
            data-bs-target="#staticBackdrop">
            Nuevo Registro
        </button>
        <p style="color: red;"><b><u>CLientes</u></b></p>
        <button class="btn btn-warning" onclick="Imprimir()">
            <i class="fa-solid fa-print"></i> IMPRIMIR
        </button>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalTitulo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <input type="hidden" id="ClienteID" value="0" />
                        <div class="mb-3">
                            <label for="NombreCompleto" class="form-label">Nombre Completo</label>
                            <input type="text" id="NombreCompleto" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="Telefono" class="form-label">Telefono</label>
                            <input type="text" id="Telefono" class="form-control">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" onclick="GuardarCliente()" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class=" m-0 font-weight-bold text-primary text-center"><i class="fa-solid fa-list"></i></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive" style="overflow-y: hidden">
            <table class="table table-hover table-bordered border-primary" style="color: black;" id="Imprimir"
                width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="table-primary">Nombre Completo</th>
                        <th class="table-primary">Telefono</th>
                        <th class="table-primary">Fecha De Creacion</th>
                        <th class="table-primary">Opciones:</th>
                    </tr>
                </thead>
                <tbody id="TablaClientes">
                </tbody>
            </table>
        </div>
    </div>
</div>




