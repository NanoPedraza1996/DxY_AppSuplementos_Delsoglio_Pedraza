<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    @* <meta http-equiv="X-UA-Compatible" content="IE=edge"> *@
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @* <meta name="description" content="">
    <meta name="author" content=""> *@

    <title>@ViewData["Title"] - DxY_AppSuplementos</title>
    <title>SB Admin 2 - Dashboard</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DxY_AppSuplementos.styles.css" asp-append-version="true" />

    <link href="~/lib/PlantillaStartBootstrap/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link rel="stylesheet" href="~/lib/PlantillaStartBootstrap/vendor/fontawesome/css/all.min.css" />
    @* <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet"> *@

    <!-- Custom styles for this template-->

</head>

<body id="page-top">
    @* <div id="page-top"> *@
    @* <header> *@
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            @{
                if (User.Identity.IsAuthenticated)
                {
                    <!-- Sidebar - Brand -->
                    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="">
                        <div class="sidebar-brand-icon rotate-n-15">
                            <img src="~/img/logo.png" class="logo">
                        </div>
                        <div class="sidebar-brand-text mx-2">Suplementos <sup><i class="fa-solid fa-jar-wheat"
                                    style="color: rgb(233, 233, 27);"></i> srl <i style="color: rgb(241, 241, 28);"
                                    class="fa-solid fa-jar-wheat"></i></sup>
                        </div>
                    </a>


                    <!-- Divider -->
                    <hr class="sidebar-divider my-0">

                    <!-- Nav Item - Dashboard -->
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i><span> Panel De Control</span></a>
                    </li>

                    <!-- Divider -->
                    <hr class="sidebar-divider">

                    <!-- Heading -->
                    <div class="sidebar-heading">
                        Vistas
                    </div>

                    <!-- Nav Item - Pages Collapse Menu -->
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                            aria-expanded="true" aria-controls="collapseTwo">
                            <i class="fas fa-fw fa-cog"></i>
                            <span>Componentes</span>
                        </a>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                            <div class="bg-white py-2 collapse-inner rounded">
                                <h6 class="collapse-header">Detalles De Componentes:</h6>
                                @* <a class="nav-link text-dark collapse-item" asp-area="" asp-controller="Home"
                        asp-action="Privacy">Privacidad</a> *@
                                <a class="nav-link text-dark collapse-item" asp-area="" asp-controller="Categorias"
                                    asp-action="Index">Categorias</a>
                                <a class="nav-link text-dark collapse-item" asp-area="" asp-controller="Productos"
                                    asp-action="Index">Productos</a>
                                <a class="nav-link text-dark collapse-item" asp-area="" asp-controller="Clientes"
                                    asp-action="Index">Clientes</a>
                                <a class="nav-link text-dark collapse-item" asp-area="" asp-controller="Vistas"
                                    asp-action="Index">Vistas</a>
                                @* <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a> *@
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
                            aria-expanded="true" aria-controls="collapseUtilities">
                            <i class="fas fa-fw fa-wrench"></i>
                            <span>Administracion</span>
                        </a>
                        <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                            data-parent="#accordionSidebar">
                            <div class="bg-white py-2 collapse-inner rounded">
                                <h6 class="collapse-header">Detalles De Procesos:</h6>
                                @* <a class="nav-link text-dark collapse-item" asp-area="" asp-controller="Promociones"
                        asp-action="Index">Listado De Promociones</a>
                        <a class="nav-link text-dark collapse-item" asp-area="" asp-controller="Promociones"
                        asp-action="Crear">Crear
                        Promociones</a> *@
                                @* <a class="nav-link text-dark collapse-item" asp-area="" asp-controller="Ventas"
                        asp-action="Index">Listado De
                        Ventas</a> *@
                                <a class="nav-link text-dark collapse-item" asp-area="" asp-controller="Ventas"
                                    asp-action="Index">Crear
                                    Ventas</a>
                            </div>
                        </div>
                    </li>

                    <!-- Divider -->
                    <hr class="sidebar-divider">

                    <!-- Heading -->
                    <div class="sidebar-heading">
                        Addons
                    </div>

                    <!-- Nav Item - Pages Collapse Menu -->
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages"
                            aria-expanded="true" aria-controls="collapsePages">
                            <i class="fas fa-fw fa-folder"></i>
                            <span>Pages</span>
                        </a>
                        <div id="collapsePages" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                            <div class="bg-white py-2 collapse-inner rounded">
                                <h6 class="collapse-header">Login Screens:</h6>
                                @* <a class="collapse-item" id="login" asp-page="./Login">Login</a> *@
                                <div class="collapse-divider"></div>
                                <h6 class="collapse-header">Other Pages:</h6>
                            </div>
                        </div>
                    </li>

                    <!-- Divider -->
                    <hr class="sidebar-divider d-none d-md-block">

                    <!-- Sidebar Toggler (Sidebar) -->
                    <div class="text-center d-none d-md-inline">
                        <button class="rounded-circle border-0" id="sidebarToggle"></button>
                    </div>

                }
                else
                { }
            }
        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <!-- Sidebar Toggle (Topbar) -->
                            <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                                <i class="fa fa-bars"></i>
                            </button>

                            <!-- Topbar Search -->
                            <form
                                class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                                <div class="input-group">
                                    <input type="text" class="form-control bg-light border-0 small" placeholder="Buscar Todo..."
                                        aria-label="Search" aria-describedby="basic-addon2" title="Busqueda">
                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="button">
                                            <i class="fas fa-search fa-sm" title="Buscar"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        }
                        else
                        { }
                    }
                    <partial name="_LoginPartial" />
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white bg-light">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Derechos Reservados &copy; DxY Suplementos @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">¿Listo para salir?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">Seleccione "Cerrar sesión" a continuación si está listo para finalizar su sesión
                    actual.</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                        asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-primary">Cerrar Seccion</button>
                        @* <button type="submit" class="btn btn-primary" data-dismiss="modal">Cerrar Seccion</button> *@
                    </form>
                    @* <button class="btn btn-secondary class="nav-link btn btn-link text-dark"" type="button"
                    data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a> *@
                </div>
            </div>
        </div>
    </div>
    @* </header> *@




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/PlantillaStartBootstrap/vendor/fontawesome/js/all.min.js"></script>

    <script src="~/lib/jspdf/jspdf.min.js"></script>
    <script src="~/lib/jspdf/jspdf.debug.js"></script>
    <script src="~/lib/jspdf/jspdf.plugin.autotable.js"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/lib/PlantillaStartBootstrap/vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/PlantillaStartBootstrap/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/lib/PlantillaStartBootstrap/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/lib/PlantillaStartBootstrap/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    @* <script src="~/lib/PlantillaStartBootstrap/vendor/chart.js/Chart.min.js"></script> *@

    <!-- Page level custom scripts -->
    @* <script src="~/lib/PlantillaStartBootstrap/js/demo/chart-area-demo.js"></script>
    <script src="~/lib/PlantillaStartBootstrap/js/demo/chart-pie-demo.js"></script> *@

    @await RenderSectionAsync("Scripts", required: false)
    @* </div> *@
</body>

</html>